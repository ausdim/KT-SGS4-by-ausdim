#!/sbin/busybox sh

. /res/customconfig/customconfig-helper

_ACTIVEPROF=`cat /data/.ghost/.ghost.profile`

case "${_ACTIVEPROF}" in
  battery)
    cp /data/.ghost/battery.profile /data/.ghost/default.profile 
    read_defaults
    read_config
    apply_config
    ;;
  balanced)
    cp /data/.ghost/balanced.profile /data/.ghost/default.profile 
    read_defaults
    read_config
    apply_config
    ;;
  performance)
    cp /data/.ghost/performance.profile /data/.ghost/default.profile 
    read_defaults
    read_config
    apply_config
    ;;
esac;
